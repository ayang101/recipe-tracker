{
    "manifest_version": 3,
    "name": "Recipe Tracker",
    "version": "1.0.0",
    "description": "Save your recipe!",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    },
    "browser-action": {
        "default_icon": "images/recipe-book.png",
        "default_popup": "popup.html",
        "default_title:": "recipe save"
    }
}